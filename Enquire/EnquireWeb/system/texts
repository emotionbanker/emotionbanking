  echo "<th align=left><small>Sprache</small></th>";
  echo "<th align=left><small>Begrüssungstext</small></th>";
  echo "<th align=left><small>Funktionen</small></th>";
  echo "</tr>";
  
  if ($settings['texts']['override'])
  {
